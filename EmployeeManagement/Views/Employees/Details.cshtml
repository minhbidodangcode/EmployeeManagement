@model EmployeeManagement.Models.Employee

<h1>Employee Details</h1>

<table class="table">
    <tr><th>Full Name</th><td>@Model.FullName</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>Phone</th><td>@Model.Phone</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Salary</th><td>@Model.Salary</td></tr>
    <tr><th>Status</th><td>@(Model.Status ? "Active" : "Inactive")</td></tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back</a>
